{
  "name": "corteza-server-corredor",
  "description": "Corteza Automation Script Runner",
  "version": "2020.3.0-rc.1",
  "license": "Apache-2.0",
  "contributors": [
    "Denis Arh <denis.arh@crust.tech>"
  ],
  "private": true,
  "main": "dist/server.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "tsndev": "ts-node-dev --debounce 200 --transpileOnly -r esm",
    "serve:dev": "yarn tsndev --respawn --ignore-watch node_modules --ignore-watch usr ./src/server.ts",
    "serve": "ts-node -r esm ./src/server.ts",
    "build": "rollup -c ./rollup.config.js",
    "lint": "eslint src/** --ext .js,.ts",
    "test:unit": "mocha",
    "test:unit:cc": "nyc mocha",
    "cdeps": "yarn upgrade @cortezaproject/corteza-js @cortezaproject/corteza-protobuf"
  },
  "dependencies": {
    "@cortezaproject/corteza-js": ">2020.3.0-alpha",
    "@cortezaproject/corteza-protobuf": "cortezaproject/corteza-protobuf.git#develop",
    "@grpc/proto-loader": "^0.5.1",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.6",
    "@types/chai-as-promised": "^7.1.2",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/pino": "5.15.3",
    "@types/webpack": "^4.41.0",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "rollup-plugin-typescript2": "^0.25.3",
    "axios": "^0.19.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dotenv": "8.2.0",
    "eslint": "6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "rollup": "^1.29.0",
    "esm": "^3.2.25",
    "glob": "^7.1.6",
    "grpc": "^1.24.1",
    "lodash": "^4.17.15",
    "mocha": "^6.2.2",
    "moment": "^2.24.0",
    "node-watch": "^0.6.3",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "pino": "5.16.0",
    "pino-pretty": "^3.5.0",
    "sinon": "7.4.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5",
    "webpack": "^4.41.2"
  },
  "devDependencies": {
    "source-map-support": "^0.5.16",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "functions": 90,
    "statements": 90,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.ts"
    ]
  },
  "engines": {
    "node": ">=12.14.0"
  }
}
